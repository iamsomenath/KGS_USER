<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="1dp"/>
            <stroke
                    android:width="2dp"
                    android:color="@color/lightGrayColor" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="@dimen/_10sdp">
        <layer-list>
            <item android:width="@dimen/_12sdp"
                  android:height="@dimen/_12sdp"
                  android:gravity="center"
                  android:bottom="@dimen/_10sdp">
                <rotate
                        android:fromDegrees="45"
                        android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/quantum_grey"/>
                        <stroke android:color="@color/quantum_grey"
                                android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item
                    android:width="@dimen/_20sdp"
                  android:height="@dimen/_10sdp"
                  android:bottom="@dimen/_20sdp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>