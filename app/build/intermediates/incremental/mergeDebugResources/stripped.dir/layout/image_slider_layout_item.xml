<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
            android:layout_gravity="center"
            android:id="@+id/iv_silderImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_sliderText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/josefinsanssemibold"
                android:text="Choose what you want to eat today"
                android:textColor="@color/payumoney_black"
                android:textSize="@dimen/_16sdp"/>

        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/tv_sliderText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="We Deliver to your office or home. Choose your food from thousands of restaurants nearby"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/opaque_black"
                android:textSize="@dimen/_12sdp">

        </TextView>

    </LinearLayout>

</LinearLayout>