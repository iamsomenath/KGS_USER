<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/expandableLayout4"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:background="@color/payumoney_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_emi_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/payumoney_white"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp">


        <ImageView
            android:id="@+id/emi_option_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_done_black_24dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/header_emi_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_toRightOf="@id/emi_option_enable"
            android:clickable="true"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_0dp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:paddingStart="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:text="@string/label_emi_header"
            android:textColor="@color/payumoney_black"
            android:textSize="@dimen/dimen_18sp" />

    </RelativeLayout>

    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expandableLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/payumoney_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        app:ael_duration="@integer/int_duration_expandable_animation"
        app:ael_expanded="false"
        app:ael_interpolator="linearOutSlowIn">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.payumoney.sdkui.ui.widgets.AutoFitRecyclerView
                android:id="@+id/emi_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:columnWidth="@dimen/column_width"
                android:padding="@dimen/dimen_10dp" />
        </RelativeLayout>
    </com.github.aakira.expandablelayout.ExpandableLinearLayout>


</LinearLayout>