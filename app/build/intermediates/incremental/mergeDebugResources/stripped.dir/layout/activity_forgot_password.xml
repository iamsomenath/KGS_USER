<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ForgotPasswordActivity">

    <LinearLayout
            android:id="@+id/contentLayout"
            android:padding="@dimen/dimen_20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_gravity="center"
                android:src="@drawable/login"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"/>

        <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/payumoney_black"
                android:layout_margin="@dimen/_10sdp"
                android:text="Enter your email or phone number and will send you instruction on how to rest it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="50sp">

            <ImageView
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:src="@drawable/iconpadlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"/>

            <EditText
                    android:id="@+id/mobile"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:hint="Mobile"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/payumoney_black"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/roboto_light"
                    android:textColorHint="@color/payumoney_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_18dp"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:id="@+id/login"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp">

        <TextView
                android:id="@+id/forgot_pass"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>