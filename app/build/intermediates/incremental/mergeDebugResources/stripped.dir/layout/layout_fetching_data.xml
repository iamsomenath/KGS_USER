<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_fetchingDataLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progressTint="@color/dashboardlightColor"/>

    <TextView
        android:id="@+id/tv_fetchingDataLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetching Data..."
        android:layout_below="@+id/pb_fetchingDataLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/dashboardlightColor"/>

</RelativeLayout>