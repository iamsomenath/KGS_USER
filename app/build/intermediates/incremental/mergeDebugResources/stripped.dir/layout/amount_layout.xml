<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/r_amount_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dimen_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quick_pay_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/quick_pay_amount"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_amount_layout_amount"
                android:visibility="visible" />

            <TextView
                android:id="@+id/show_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="Details"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/dimen_14sp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l_convenience_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/payumoney_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subtotal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal:"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/subtotal_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/quick_pay_amount" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@color/payumoney_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/convenience_fee_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convenience Fee:"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/convenience_fee_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/quick_pay_amount" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Total:"
                    android:textSize="@dimen/dimen_18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/quick_pay_amount" />
            </RelativeLayout>

            <TextView
                android:id="@+id/hide_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:text="Hide Details"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>