<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SignUpActivity">

    <ScrollView
            android:layout_above="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/contentLayout"
                    android:padding="@dimen/dimen_20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp">

                    <ImageView
                            android:src="@drawable/signup"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"/>

                    <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/component"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <LinearLayout
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                    <ImageView
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:src="@drawable/user"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginLeft="@dimen/dimen_20dp"/>

                    <EditText
                            android:id="@+id/name"
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:hint="Full Name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:textColor="@color/payumoney_black"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_light"
                            android:textColorHint="@color/payumoney_black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_18dp"/>

                </LinearLayout>

                <LinearLayout
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                    <ImageView
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:src="@drawable/telephone"
                            android:tint="#748a9d"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginLeft="@dimen/dimen_20dp"/>

                    <EditText
                            android:id="@+id/mobile"
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:hint="Mobile"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/payumoney_black"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_light"
                            android:textColorHint="@color/payumoney_black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_18dp"/>

                </LinearLayout>

                <LinearLayout
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                    <ImageView
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:src="@drawable/email2"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:tint="#748a9d"
                            android:layout_marginLeft="@dimen/dimen_20dp"/>

                    <EditText
                            android:id="@+id/etEmail"
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:hint="Email-Id"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/payumoney_black"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_light"
                            android:textColorHint="@color/payumoney_black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_18dp"/>

                </LinearLayout>

                <LinearLayout
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                    <ImageView
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:src="@drawable/iconpadlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20dp"/>

                    <EditText
                            android:id="@+id/etPassword"
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:hint="Password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:textColor="@color/payumoney_black"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_light"
                            android:textColorHint="@color/payumoney_black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"/>

                </LinearLayout>

                <LinearLayout
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                    <ImageView
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:src="@drawable/iconpadlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20dp"/>

                    <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_marginStart="@dimen/dimen_20dp"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:hint="Confirm Password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:textColor="@color/payumoney_black"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_light"
                            android:textColorHint="@color/payumoney_black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                        android:id="@+id/signup"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                    <TextView
                            android:id="@+id/forgot_pass"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textAllCaps="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Create Account"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
            android:id="@+id/login"
            android:padding="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/roboto_light"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/payumoney_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:layout_marginRight="@dimen/_20sdp"/>

</RelativeLayout>