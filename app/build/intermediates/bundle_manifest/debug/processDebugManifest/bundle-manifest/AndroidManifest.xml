            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.app.kgs_user.activity.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.app.kgs_user.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.app.kgs_user.activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
